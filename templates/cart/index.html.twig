{% extends 'base.html.twig' %}

{% block title %}Hello CartController!{% endblock %}

{% block body %}
    <section class="h-100" style="background-color: #eee;">
        <div class="container h-100 py-5">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-10">
                    {% for key,value in quantity %}
                        {% for bookInfo in bookInfos%}
                            {% if bookInfo.id == key %}
                    <div class="card rounded-3 mb-4">
                        <div class="card-body p-4">
                            <div class="row d-flex justify-content-between align-items-center">
                                        <div class="col-md-2 col-lg-2 col-xl-2">
                                            <input type="hidden" name="idOfBook" value="{{ key }}">ID: {{ key}}<br>
        {#                                    <a>bookIfo</a>#}
        {#                                    <h6>ID: {{ key }}</h6>#}
                                        </div>

{#                                {% for bookInfo in bookInfos%}#}
{#                                    {% if bookInfo.id == {{key}} %}#}
                                        <div class="col-md-3 col-lg-3 col-xl-3">
                                            <h4 >{{ bookInfo.bookName }}</h4>
                                            <p class="lead fw-normal mb-2">Category: {{ bookInfo.category.name }}</p>
                                            <p class="lead fw-normal mb-2">Author: {{ bookInfo.author.authorName }}</p>
                                            <p class="lead fw-normal mb-2">Seller: {{ bookInfo.user.fullName}}</p>
                                            <p class="lead fw-normal mb-2">Price: {{ bookInfo.price}}</p>
                                        </div>
{#                                    {% endif %}#}
{#                                {% endfor %}#}
{#                                <form id="addToCart" action="{{ path('app_review_cart')}}" method="get">#}
                                <div class="col-md-3 col-lg-3 col-xl-2 d-flex">
                                    <button class="btn btn-link px-2"
                                            onclick="this.parentNode.querySelector('input[type=number]').stepDown()">
                                        <i class="bi bi-dash"></i>
                                    </button>

                                    <input id="form1" min="" name="quantityAfter" value="{{ value }}"  type="number"
                                           class="form-control form-control-sm" />

                                    <button class="btn btn-link px-2"
                                            onclick="this.parentNode.querySelector('input[type=number]').stepUp()">
                                        <i class="bi bi-file-plus"></i>
                                    </button>
                                </div>
                                <div class="col-md-3 col-lg-2 col-xl-2 offset-lg-1">
                                    <h5 class="mb-0">{{ value*bookInfo.price }}</h5>
                                </div>
{#                                </form>#}
                                <div class="col-md-1 col-lg-1 col-xl-1 text-end">
                                    <a href="#!" class="text-danger"><i class="fas fa-trash fa-lg"></i></a>
                                </div>
                            </div>
                        </div>
                    </div>
                            {% endif %}
                        {% endfor %}
                    {% endfor %}
                    <div class="card">
                        <div class="card-body">
                            <button type="button" class="btn btn-warning btn-block btn-lg">Proceed to Pay</button>
                        </div>
                    </div>
                    <table>
                        <tr>
                            {% for key,value in quantity %}
                                {{ key }} - {{ value }}
                                <td>{{key|e }}</td>
                                <td>{{ key|e }}</td>
                            {% endfor %}
                        </tr>

                    </table>

                </div>
            </div>
        </div>
    </section>
{% endblock %}
